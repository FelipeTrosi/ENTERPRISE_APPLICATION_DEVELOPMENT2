@model IList<Serie>

@{
    ViewData["Title"] = "Listar";
}

<h1>Lista</h1>

<mensagem texto="@TempData["msg"]"></mensagem>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Gênero</th>
        <th>Data Lançamento</th>
        <th>Temporadas</th>
        <th>Opções</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Tipo</td>
            <td>@item.DataLancamento.ToShortDateString()</td>
            <td>@item.Temporadas</td>
            <td><a class="btn btn-sm btn-light"asp-action="editar" asp-route-id="@item.SerieId">Editar</a>
                <button onclick="codigo.value = @item.SerieId" type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modalExemplo">
                    Excluir
                </button>
            </td>
        </tr>
    }
</table>



<!-- Modal -->
<div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Excluir serie</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Você deseja realmente exlcuir a serie ?
      </div>
      <div class="modal-footer">
          <form asp-action="Excluir">
              <input type="hidden" name="id" id="codigo" />
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
              <button type="submit" class="btn btn-danger">Confirmar</button>
          </form>
      </div>
    </div>
  </div>
</div>
