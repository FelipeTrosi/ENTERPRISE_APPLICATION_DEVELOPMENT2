@model IList<Serie>
@{
    ViewData["Title"] = "Listar";
}

<h1>Lista</h1>

<mensagem texto="@TempData["msg"]"></mensagem>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Gênero</th>
        <th>Data Lançamento</th>
        <th>Temporadas</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Tipo</td>
            <td>@item.DataLancamento.ToShortDateString()</td>
            <td>@item.Temporadas</td>
        </tr>
    }
</table>
