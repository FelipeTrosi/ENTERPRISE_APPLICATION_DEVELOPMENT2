@model Serie 

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>


<form asp-action="Cadastrar" asp-controller="Serie" >
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <select asp-for="Tipo" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DataLancamento"></label>
        <input asp-for="DataLancamento" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Temporadas"></label>
        <input asp-for="Temporadas" class="form-control" />
    </div>
    <botao></botao>
    @*<input type="submit" value="Cadastrar" class="btn btn-primary" />*@
</form>