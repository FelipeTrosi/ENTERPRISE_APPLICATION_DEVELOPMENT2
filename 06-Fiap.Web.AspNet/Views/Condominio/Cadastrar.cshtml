@model Condominio
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<form asp-action="Cadastrar">
    <div class="form-group">
        <label asp-for="Nome"> </label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Blocos"> </label>
        <input asp-for="Blocos" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Tipo"> </label>
        <select asp-for="Tipo" asp-items="@Html.GetEnumSelectList<Tipo>()" class="form-control" >
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Ativo"> </label>
        <input asp-for="Ativo" />
    </div>
    <botao texto="Cadastrar"/>
</form>