@model Jogo

<div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="DataLancamento"></label>
    <input asp-for="DataLancamento" class="form-control" />
</div>
<div class="form-group">

    <label asp-for="Plataforma"></label>
    <select asp-for="Plataforma"
            asp-items="@Html.GetEnumSelectList<Plataforma>()" class="form-control">
        <option>Selecione</option>
    </select>
</div>

<div class="form-group">
    <label asp-for="Genero"></label>
    <select asp-for="GeneroId" asp-items="@ViewBag.generos" class="form-control">
        <option>Selecione</option>
    </select>
</div>
